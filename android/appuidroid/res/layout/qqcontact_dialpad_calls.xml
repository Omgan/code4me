<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialInput_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dial_input_number_bg"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/switchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/transparent"
        android:paddingLeft="6.0dip"
        android:paddingRight="6.0dip"
        android:soundEffectsEnabled="false"
        android:src="@drawable/ic_call_gsm" />

    <EditText
        android:id="@+id/dial_input_numer_TXT"
        android:layout_width="fill_parent"
        android:layout_height="42.0dip"
        android:layout_gravity="right|center"
        android:layout_margin="2.0dip"
        android:layout_weight="1.0"
        android:background="@drawable/dial_input_text_bg"
        android:drawableLeft="@drawable/ic_calllog_call_active"
        android:minWidth="140.0dip"
        android:paddingLeft="6.0dip"
        android:paddingRight="5.0dip"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="24.0sp" />

    <ImageButton
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="12.0dip"
        android:layout_marginTop="12.0dip"
        android:background="@color/transparent"
        android:paddingLeft="6.0dip"
        android:paddingRight="6.0dip"
        android:soundEffectsEnabled="false"
        android:src="@drawable/btn_dial_delete" />

</LinearLayout>