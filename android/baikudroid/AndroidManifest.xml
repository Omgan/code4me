<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.baikudroid"
	android:versionCode="1" 
	android:versionName="1.0" >
    <uses-sdk android:minSdkVersion="8" />
    <application 
        android:icon="@drawable/logo"
        android:label="@string/app_name" android:name=".BaikuApplication">
        <activity android:name="com.example.baikudroid.MainActivity" android:label="@string/app_name" android:theme="@style/Theme.Baiku"
            android:windowSoftInputMode="adjustResize|stateHidden">
        </activity>
       	<activity android:name="com.example.baikudroid.LoginActivity" android:label="@string/app_name" android:theme="@style/Theme.Baiku" 
             android:windowSoftInputMode="adjustResize|stateHidden">
			<intent-filter >
                <action android:name="com.example.baikudroid.LOGIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
		</activity>
		<activity android:name="com.example.baikudroid.ContactActivity" android:label="@string/app_name" android:theme="@style/Theme.Baiku" 
             android:windowSoftInputMode="adjustResize|stateHidden">
			<intent-filter >
                <action android:name="com.example.baikudroid.CONTACT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>	
		</activity>
		<activity android:name="com.example.baikudroid.AboutActivity" android:label="@string/app_name" android:theme="@style/Theme.Baiku" 
             android:windowSoftInputMode="adjustResize|stateHidden">
			<intent-filter >
                <action android:name="com.example.baikudroid.ABOUT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
		</activity>
		<activity android:name="com.example.baikudroid.IntentActivity" android:label="@string/app_name" android:theme="@style/Theme.Baiku" 
             android:windowSoftInputMode="adjustResize|stateHidden">
			<intent-filter >
                <action android:name="com.example.baikudroid.INTENT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
		</activity>
		<activity android:name="com.example.baikudroid.SubIntentActivity" android:label="@string/app_name" android:theme="@style/Theme.Baiku" 
             android:windowSoftInputMode="adjustResize|stateHidden">
			<intent-filter >
                <action android:name="com.example.baikudroid.SUBINTENT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
		</activity>
        <activity android:name=".BaikuActivity" android:label="@string/app_name" android:theme="@style/Theme.Baiku"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>			
        </activity>
    </application>
</manifest>